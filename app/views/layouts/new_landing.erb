<%= stylesheet_link_tag "main.css" %>
<%= stylesheet_link_tag "normalize" %>
<% images = @latest_visions.collect{|vision| vision.pictures.first.large} %>

<style>
  <% @latest_visions.each_with_index do |vision, index| %>
    #slide-<%=index + 1%> .bcg {background-image:url('<%=images[index]%>')}
  <% end %>
</style>

<body class="loading">
  <div class='container main'>
    <div class='main-wrapper'>
      <div id="preload">
        <% images.each do |url| %>
          <img src="<%= url %>">
        <% end %>
      </div>
      <main>
        <% @latest_visions.each_with_index do |vision, index| %>
          <section id="slide-<%=index+1%>" class="homeSlide">
            <div class="bcg">
              <div class="hsContainer">
                <div class="hsContent">
                  <h2><%= vision.title%></h2>
                </div>
              </div>
            </div>
          </section>
        <% end %>
      </main>
    </div>
  </div>
</body>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="js/vendor/jquery-1.9.1.min.js"><\/script>')</script>
<%= javascript_include_tag 'imagesloaded' %>
<%= javascript_include_tag 'skrollr' %>
<%= javascript_include_tag '_main' %>