<ul class="nav nav-tabs">
  <li> <%= link_to tag_icon(:list, pat(:list)), url(:wards, :index) %></li>
  <li> <%= link_to tag_icon(:plus, pat(:new)), url(:wards, :new) %></li>
  <li class="active"> <%= link_to tag_icon(:edit, pat(:edit)), url(:wards, :edit, :id => @ward.id) %></li>
</ul>

<div class="tabs-content">
  <% form_for :ward, url(:wards, :update, :id => @ward.id), :method => :put, :class => 'form-horizontal' do |f| %>
